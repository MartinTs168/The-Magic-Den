@using System.Security.Claims
@inject ICachePointsService CachePointsService
@inject ISubCategoryService SubCategoryService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoardGamesShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoardGamesShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_loginPartial.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <button
                style="background-color: inherit; border: none;"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#sideMenu"
                aria-controls="sideMenu"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
                
                
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BoardGamesShop</a>

            <form method="get" asp-controller="Game" asp-action="All" class="main-search-form">
                <input name="SearchTerm" type="text"/>
                <button type="submit" class="search-header-button">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <div class="navbar d-sm-flex">

                @if (User.IsInRole(AdminRole))
                {
                    <ul class="navbar-nav flex-grow-1" style="margin-right: 10px;">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Dashboard">
                                Admin Panel
                            </a>
                        </li>
                    </ul>
                }

                @if (User.Identity!.IsAuthenticated)
                {
                    <ul class="navbar-nav d-flex align-items-center" style="gap: 1.6em; flex-direction: row">
                        <li class="nav-item magic-points-field">
                            <p class="text-center m-0">
                                <img src="~/images/magic_points_icon Large.png" alt="magic points icon" class="magic-points-icon"/>
                                @($"{(await CachePointsService.GetCurrentValueAsync(User.Id()) / 1000):F0}")K
                            </p>
                            <div class="magic-points-info-field">
                                <p class="text-center m-0">
                                    You have @await CachePointsService.GetCurrentValueAsync(User.Id()) Magic Points.
                                    You can use these points to buy discounts. You can acquire them through purchases.
                                </p>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="ShoppingCart" asp-action="Index" class="shopping-cart-link">
                                <i class="bi bi-basket"></i>
                            </a>
                        </li>
                    </ul>
                }

                <partial name="_LoginPartial"/>
            </div>
        </div>
        <div class="search-bar-responsive-container">
            <form method="get" asp-controller="Game" asp-action="All" class="main-search-form">
                <input name="SearchTerm" type="text"/>
                <button type="submit" class="search-header-button">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
    </nav>
</header>

<div
    class="offcanvas offcanvas-start offcanvas-custom side-menu"
    tabindex="-1"
    id="sideMenu"
    aria-labelledby="sideMenuLabel"
>
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sideMenuLabel">Menu</h5>
        <button
            type="button"
            class="btn-close btn-close-white"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
        ></button>
    </div>
    <div class="offcanvas-body">
        <div class="accordion-item side-menu-item">
            <div class="accordion-header d-flex align-items-center justify-content-between" id="headingBoardGames">
                <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                    <input hidden name="Category" type="text" value="Board Games" />
                    <button type="submit" class="side-menu-link">Board Games</button>
                </form>
                <button
                    class="btn btn-link p-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseBoardGames"
                    aria-expanded="false"
                    aria-controls="collapseBoardGames"
                >
                    <i class="bi bi-chevron-down text-light"></i>
                </button>
            </div>
            <div
                id="collapseBoardGames"
                class="accordion-collapse collapse"
                aria-labelledby="headingBoardGames"
                data-bs-parent="#accordionMenu"
            >
                <div class="accordion-body">
                    @foreach (string subcategory in 
                              await SubCategoryService.GetSubCategoriesNamesByCategoryNameAsync("Board Games"))
                    {
                        <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                            <input hidden name="Subcategory" type="text" value="@subcategory" />
                            <button type="submit" class="side-menu-link">@subcategory</button>
                        </form>
                    }
                   
                </div>
            </div>
        </div>
        <div class="accordion-item side-menu-item">
            <div class="accordion-header d-flex align-items-center justify-content-between" id="headingCardGames">
                <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                    <input hidden name="Category" type="text" value="Card Games" />
                    <button type="submit" class="side-menu-link">TCG</button>
                </form>
                <button
                    class="btn btn-link p-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseCardGames"
                    aria-expanded="false"
                    aria-controls="collapseCardGames"
                >
                    <i class="bi bi-chevron-down text-light"></i>
                </button>
            </div>
            <div
                id="collapseCardGames"
                class="accordion-collapse collapse"
                aria-labelledby="headingCardGames"
                data-bs-parent="#accordionMenu"
            >
                <div class="accordion-body">
                    @foreach (string subcategory in
                              await SubCategoryService.GetSubCategoriesNamesByCategoryNameAsync("Card Games"))
                    {
                        <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                            <input hidden name="Subcategory" type="text" value="@subcategory" />
                            <button type="submit" class="side-menu-link">@subcategory</button>
                        </form>
                    }

                </div>
            </div>
        </div>

        <div class="accordion-item side-menu-item">
            <div class="accordion-header d-flex align-items-center justify-content-between" id="headingRolePlayingGames">
                <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                    <input hidden name="Category" type="text" value="Role playing games" />
                    <button type="submit" class="side-menu-link">RPG</button>
                </form>
                <button
                    class="btn btn-link p-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseRolePlayingGames"
                    aria-expanded="false"
                    aria-controls="collapseRolePlayingGames"
                >
                    <i class="bi bi-chevron-down text-light"></i>
                </button>
            </div>
            <div
                id="collapseRolePlayingGames"
                class="accordion-collapse collapse"
                aria-labelledby="headingRolePlayingGames"
                data-bs-parent="#accordionMenu"
            >
                <div class="accordion-body">
                    @foreach (string subcategory in
                                  await SubCategoryService.GetSubCategoriesNamesByCategoryNameAsync("Role playing games"))
                    {
                        <form method="get" asp-area="" asp-controller="Game" asp-action="All">
                            <input hidden name="Subcategory" type="text" value="@subcategory" />
                            <button type="submit" class="side-menu-link">@subcategory</button>
                        </form>
                    }

                </div>
            </div>
        </div>

    </div>
</div>

<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BoardGamesShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData[UserMessageSuccess] != null)
    {
        <script defer>
            showSuccess('@TempData[UserMessageSuccess]');
        </script>
    }

    @if (TempData[UserMessageError] != null)
    {
        <script defer>
            showError('@TempData[UserMessageError]');
        </script>
    }
    
    </body>
</html>
