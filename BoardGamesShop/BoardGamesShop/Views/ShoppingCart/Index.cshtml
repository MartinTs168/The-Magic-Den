@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="text-center">Your Shopping Cart</div>

@foreach (var item in Model.ShoppingCartItems)
{
    <input type="hidden" name="cartId" value="@Model.Id"/>
    <div class-="row">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="@item.ImgUrl" alt="game image" width="100%" class="rounded"/>
                    </div>
                    <div class="col-md-9">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: @item.TotalPrice.ToString("c")</p>
                        <form method="post">
                            <p class="card-text">Quantity: 
                                <input asp-for="Count" class="quantity-input"/>
                                <span asp-validation-for="Count" name="Count" class="small text-danger"></span>
                            </p>
                        </form>
                        <form method="post">
                            <input type="hidden" name="gameId" value="@item.GameId">
                            <input type="hidden" name="cartId" value="@Model.Id">
                            
                            <button asp-area="" asp-controller="ShoppingCart" asp-action="RemoveGameFromCart" 
                                    type="submit" class="btn btn-danger">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    // Set global variables that the external JS file can use:
    window.cartUpdateUrl = '@Url.Action("UpdateCartQuantity", "ShoppingCart")';
</script>
<script src="~/js/shoppingCart.js" sp-append-version="true"></script>
    