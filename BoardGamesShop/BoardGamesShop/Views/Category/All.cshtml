@model IEnumerable<AllCategoriesViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="card shadow border-0 mt-4">


    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    
    <div class="d-flex gap-1 justify-content-around align-content-center">
        @foreach (var category in Model)
        {
            <div class="card-body p-4 text-center">
                <div class="col-4 text-center w-100">
                    <h6 class="text-center w-100">@category.Name</h6>
                    @foreach (var subCategory in category.SubCategories)
                    {
                        <div class="row">
                            <p class="text-center">@subCategory.Name</p>
                        </div>
                    }
                </div>
                
            </div>
        }
    </div>
    
    
</div>

