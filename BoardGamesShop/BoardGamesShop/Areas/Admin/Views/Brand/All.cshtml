@model IEnumerable<BrandModel>

@{
    ViewBag.Title = "All Brands";
}

<div class="card shadow border-0 mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Brand" asp-action="Add" class="btn btn-primary">
                    <i class="bi bi-patch-plus"></i> Create new Brand
                </a>
            </div>
        </div>
    </div>


    <table class="table table-bordered table-striped">


        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        </thead>
        
        <tbody>
        
        @foreach (var brand in Model)
        {
            <tr>
                <td class="w-50">@brand.Name</td>
                <td>
                    <div class="text-center d-flex justify-content-around flex-xs-column" role="group">
                        <a asp-controller="Brand" asp-action="Edit"  asp-route-id="@brand.Id" value="Edit"
                           class="btn btn-secondary text-center rounded-1 border-0 w-25">Edit</a>
                        <a asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id" value="Delete" 
                           class="btn btn-danger text-center rounded-1 border-0 w-25">Delete</a>
                    </div>
                </td>
            </tr>
                
        }
        </tbody>
        
        
        
    </table>
    
    
    
</div>


@section Styles
{
    <link rel="stylesheet" href="~/css/Brand/all.css"/>
}




