@model IEnumerable<AllCategoriesViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<div class="card shadow border-0 mt-4">


    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>

    <div class="row mb-2 mt-2 justify-content-around">
        <div class="col-4 text-center">
            <a asp-action="CreateCategory" class="btn btn-sm btn-primary p-1 w-100">Add New Category</a>
        </div>
        <div class="col-4 text-center">
            <a asp-action="CreateSubCategory" class="btn btn-sm btn-primary p-1 w-100">Add New Sub Category</a>
        </div>
    </div>
    
    <div class="d-flex gap-1 justify-content-around align-content-center flex-xs-column">
        @foreach (var category in Model)
        {
            <div class="card-body p-4 text-center bordered-card">
                <div class="col-4 text-center w-100">
                    <h6 class="text-center w-100">@category.Name</h6>
                    <div class="row mb-2">
                        <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                    @foreach (var subCategory in category.SubCategories)
                    {
                        <div class="row">
                            <p class="text-center">@subCategory.Name</p>
                            <a asp-action="EditSubCategory" asp-route-id="@subCategory.Id" 
                               class="btn btn-sm btn-secondary w-50">Edit</a>
                            <a asp-action="DeleteSubCategory" asp-route-id="@subCategory.Id"
                               class="btn btn-sm btn-danger w-50">Delete</a>
                        </div>
                    }
                </div>
                
            </div>
        }
    </div>
    
    
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/Category/all.css"/>
}

